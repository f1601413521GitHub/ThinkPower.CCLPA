@model ThinkPower.CCLPA.Web.ViewModels.ImportPreAdjustViewModel

@{
    ViewBag.Title = "ImportPreAdjust";
}


<div class="row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>

<div class="row">

    @if (Model != null)
    {
        var title = String.Empty;
        var msg = String.Empty;

        if (!String.IsNullOrEmpty(Model.ValidateMessage))
        {
            title = "檢核錯誤提示訊息";
            msg = Model.ValidateMessage;
        }
        else
        {
            title = "提示訊息";
            msg = "名單匯入完成";
        }

        <div class="modal" tabindex="-1" role="dialog" id="tip-modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>@msg</p>
                    </div>
                    <div class="modal-footer">
                        @Html.ActionLink("確定", "PreAdjustImportPage", "Adjust", new { }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    }

</div>



@section scripts{
    <script>

        if ($('#tip-modal').length > 0) {
            $('#tip-modal').modal('show');
        }

    </script>
}